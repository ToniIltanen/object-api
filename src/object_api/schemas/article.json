{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Article",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "resource_link": {
            "description": "Direct link to resource",
            "type": "string",
            "format": "uri"
        },
        "source": {
            "type": "string"
        }
    },
    "required": ["title", "description", "resource_link", "source"]
}